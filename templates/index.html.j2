<!doctype html>
<!-- The PDF viewer -->
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <style>
        body {
            margin: 0;
            height: 100vh;
            overflow: hidden;
        }

        object, iframe {
            border: 0;
            background-color: white;
            width: 100%;
            height: 100%;
        }

        #employer {
            position: absolute;
            top: 0;
            pointer-events: none;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        #employer svg {
            height: auto;
            width: 100%;
            object-fit: contain;
        }
    </style>
</head>

<body>
    <div id="employer">
        {% include 'assets/feather-animation.svg' %}
    </div>
    <object data="{{ PDF }}#view=FitH&zoom=page-width" type="application/pdf">
        <iframe src="{{ PDF }}#view=FitH&zoom=page-width"></iframe>
    </object>
</body>

</html>